<%- include('partials/header'); -%>

<div class="back-leaf">
<div class="box">
  <h1 id="heading"><%= listTitle %></h1>
</div>
<div class="box">

  <% for (item in newListItems) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= newListItems[item]._id %>" onchange="this.form.submit()"/>
      <p><%= newListItems[item].name %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>" />
  </form>
  <% } %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newTodo"
      placeholder="New Item"
      autocomplete="off"
    />
    <button class="plus" type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

</div>

<%- include('partials/footer'); -%>