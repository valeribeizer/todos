<%- include('partials/header-unreg') %>

<div class="container mt-5 row-reg-log">
  <h1 class="reg-log">Login</h1>

  <div class="row row-reg-log">
    <div class="col col-lg-6">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="lb-reg-log" for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label class="lb-reg-log" for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark reg-log-sub">Submit</button>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>